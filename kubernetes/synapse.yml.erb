apiVersion: v1
kind: Service
metadata:
  name: matrix-service
spec:
  selector:
    app: matrix
  ports:
    - port: 80
      targetPort: 8008
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: matrix-deployment
  labels:
    app: matrix
spec:
  replicas: 1
  selector:
    matchLabels:
      app: matrix
  template:
    metadata:
      labels:
        app: matrix
    spec:
      containers:
        - name: matrix-synapse
          image: "matrixdotorg/synapse:v1.9.1-py3"
          ports:
            - containerPort: 8008
          volumeMounts:
            - mountPath: /data
              name: vol
            - name: homeserver-config
              mountPath: /homeserver-config
              readOnly: true
          env:
          - name: "SYNAPSE_CONFIG_PATH"
            value: "/homeserver-config/homeserver.yaml"
      volumes:
        - name: vol
          persistentVolumeClaim:
            claimName: matrix-vol
        - name: homeserver-config
          secret:
            secretName: synapse-config
        
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: matrix.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: matrix-service
              servicePort: 80
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: matrix-vol
spec:
  accessModes:
  - ReadWriteMany
  resources:
    requests:
      storage: 10Gi
  storageClassName: managed-nfs-storage

